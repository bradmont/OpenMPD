<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/net.bradmont.openmpd"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView android:id="@+id/lname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", " />
        <TextView android:id="@+id/fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" " />
        <TextView android:id="@+id/spouse_fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/partner_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" " />
        <TextView
            android:id="@+id/giving_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=" " />
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown" />
    </LinearLayout>
    <net.bradmont.holograph.BarGraph 
        android:id="@+id/gifts_graph"
        android:layout_width="fill_parent"
        android:layout_height="300px"
        android:padding="8dp"
        custom:colors="#33b5e5,#ffbb33,#ff4444"
        custom:lineColor="#707070"
        custom:barWeight="1"
        custom:spacingWeight=".75"
        custom:maxItems="13"
    />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <ListView
            android:id="@+id/gift_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Unknown" />
        <TextView
            android:id="@+id/notes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Unknown" />
    </LinearLayout>
</LinearLayout>

