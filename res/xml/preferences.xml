<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory 
        android:title="@string/pref_updating"
        android:key="pref_key_storage_settings">
        <SwitchPreference
            android:key="pref_notify_office_hours"
            android:summary="@string/pref_notify_office_hours_summary"
            android:title="@string/pref_notify_office_hours"
            android:defaultValue="false"/>
        <ListPreference 
            android:key="pref_update_frequency"
            android:summary="@string/pref_update_frequency_summary"
            android:dialogTitle="@string/pref_update_frequency"
            android:title="@string/pref_update_frequency" 
            android:entryValues="@array/pref_update_frequencies"
            android:entries="@array/pref_update_frequency_labels"
            android:defaultValue="3"/>
    </PreferenceCategory>
    <PreferenceCategory 
        android:title="@string/pref_experimental"
        android:key="pref_experimental">
        <SwitchPreference 
            android:key="pref_message_templates_enabled"
            android:summary="@string/pref_message_templates_enabled_summary"
            android:title="@string/pref_message_templates_enabled"
            android:defaultValue="false"/>
        <!-- <SwitchPreference
            android:key="pref_debug_enabled"
            android:summary="@string/pref_debug_enabled_summary"
            android:title="@string/pref_debug_enabled"
            android:defaultValue="false"/> -->
    </PreferenceCategory>
</PreferenceScreen>
